# Production Environment Variables for VPS Deployment
# Copy this file to .env on your VPS server

# Django Core Settings
SECRET_KEY=your-super-secret-production-key-here-generate-a-new-one
DEBUG=False
DJANGO_SETTINGS_MODULE=epcdata.onlinesettings

# Allowed Hosts (add your domain name when you have one)
ALLOWED_HOSTS=80.95.207.42,yourdomain.com,www.yourdomain.com

# Database Configuration (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=parts_store
DB_USER=postgres
DB_PASSWORD=your-database-password-here
DB_HOST=localhost
DB_PORT=5432

# Static Files Settings
STATIC_URL=/static/
STATIC_ROOT=/home/rentals/epc_parts_store/epcdata/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/home/rentals/epc_parts_store/epcdata/media

# Worldpay Payment Configuration
# Get these values from your Worldpay dashboard
WORLDPAY_INSTALLATION_ID=YOUR_INSTALLATION_ID
WORLDPAY_SECRET_KEY=YOUR_SECRET_KEY
WORLDPAY_TEST_MODE=True
WORLDPAY_CALLBACK_PASSWORD=YOUR_CALLBACK_PASSWORD

# Email Configuration (for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=EPC Motor Parts <noreply@yourdomain.com>

# Security Settings (for production)
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Logging Level
LOG_LEVEL=INFO
